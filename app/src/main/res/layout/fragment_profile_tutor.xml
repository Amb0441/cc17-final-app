<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ProfileFragmentTutor">

    <!-- Profile Title -->
    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="100dp"
            android:clipToPadding="false">

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#4DD0C4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Banner Image -->
                    <ImageView
                        android:id="@+id/bannerImage"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:contentDescription="Banner Image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/weaklegs"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Edit Icon Placeholder -->
                    <ImageView
                        android:id="@+id/ivEdit"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:background="@drawable/circle_white_background"
                        android:padding="6dp"
                        android:layout_margin="8dp"
                        app:layout_constraintTop_toTopOf="@id/bannerImage"
                        app:layout_constraintEnd_toEndOf="@id/bannerImage"/>

                    <!-- Profile Picture Placeholder -->
                    <ImageView
                        android:id="@+id/ivProfilePicture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile_picture_1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_shape"
                        android:clipToOutline="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="80dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Info Container with lighter background -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardUserInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/ivProfilePicture"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <!-- Name -->
                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Luis Legweak"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tvRole"/>

                            <!-- Username -->
                            <TextView
                                android:id="@+id/tvUsername"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="\@legaintstrong"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                app:layout_constraintTop_toBottomOf="@id/tvName"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tvRole"/>

                            <!-- Role -->
                            <TextView
                                android:id="@+id/tvRole"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Computer Science and Data\nAnalyst Tutor"
                                android:textSize="12sp"
                                android:textColor="#000000"
                                android:gravity="end"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tvName"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Bio -->
                    <TextView
                        android:id="@+id/tvBio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Saint Louis University professor that has studied and worked in data analytics and computer science."
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/cardUserInfo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Followers -->
                    <TextView
                        android:id="@+id/tvFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="900 Followers"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvBio"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- LinkedIn Icon Placeholder -->
                    <!-- LinkedIn Icon -->
                    <ImageView
                        android:id="@+id/ivLinkedIn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/social"
                        android:background="@drawable/circle_teal_background"
                        android:padding="4dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvFollowers"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Badges Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#4DD0C4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Badges Earned"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <!-- Empty space for badges -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- My Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMyInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#4DD0C4"
                android:layout_marginBottom="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:paddingBottom="120dp"
                    android:clipToPadding="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Info"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <!-- Alma Mater -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2BA89E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alma Mater"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saint Louis University"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Can Tutor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2BA89E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Can Tutor"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Analysis, Data Structures and Algorithms, Networking Machine Learning"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Work Experience -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2BA89E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work Experience"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Analyst at Texas Instruments (5 years), Professor at Saint Louis University (2 years)"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Profile Tags -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2BA89E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Tags"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#Computer Science, #Data Structure, #Data Algorithms, #Networking, #Machine Learning"
                        android:textSize="12sp"
                        android:textColor="#000000"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>