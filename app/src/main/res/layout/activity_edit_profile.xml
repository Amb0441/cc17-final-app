<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".EditProfileActivity">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_teal_background"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Back"
            android:padding="4dp"
            app:tint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvEditProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4DD0C4"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Banner Image Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#4DD0C4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Banner Image with Edit Overlay -->
                    <FrameLayout
                        android:id="@+id/bannerContainer"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Banner Image -->
                        <ImageView
                            android:id="@+id/bannerImageEdit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/weaklegs"
                            android:contentDescription="Banner Image" />

                        <!-- Dark Overlay -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#80000000" />

                        <!-- Change Banner Button -->
                        <LinearLayout
                            android:id="@+id/btnChangeBanner"
                            android:layout_width="120dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="6dp"
                                android:src="@drawable/pencil"
                                android:contentDescription="Edit"
                                app:tint="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit Banner"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Profile Picture with Edit Overlay -->
                    <FrameLayout
                        android:id="@+id/profilePictureContainer"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/circle_shape"
                        android:clipToOutline="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <!-- Profile Picture Image -->
                        <ImageView
                            android:id="@+id/ivProfilePictureEdit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_picture_1"
                            android:contentDescription="Profile Picture" />

                        <!-- Dark Overlay (50% black) -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#80000000" />

                        <!-- Pencil Icon (Edit indicator) -->
                        <ImageView
                            android:id="@+id/btnChangePhoto"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/pencil"
                            android:contentDescription="Edit Photo"
                            app:tint="#FFFFFF" />
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Basic Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp"/>

                    <!-- Name Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your name"
                        android:text="Luis Legweak"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Username Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your username"
                        android:text="legaintstrong"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Role Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Role"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etRole"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your role"
                        android:text="Computer Science and Data Analyst Tutor"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Bio Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bio"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etBio"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Tell us about yourself"
                        android:text="Saint Louis University professor that has studied and worked in data analytics and computer science."
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:gravity="top"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Professional Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Professional Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp"/>

                    <!-- Alma Mater Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alma Mater"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etAlmaMater"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your alma mater"
                        android:text="Saint Louis University"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Can Tutor Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Can Tutor"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etCanTutor"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:hint="Enter subjects you can tutor"
                        android:text="Data Analysis, Data Structures and Algorithms, Networking Machine Learning"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:gravity="top"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Work Experience Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work Experience"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etWorkExperience"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:hint="Enter your work experience"
                        android:text="Data Analyst at Texas Instruments (5 years), Professor at Saint Louis University (2 years)"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:gravity="top"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- LinkedIn Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LinkedIn URL"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etLinkedIn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your LinkedIn profile URL"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Profile Tags Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Tags"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etProfileTags"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:hint="Enter profile tags (comma separated)"
                        android:text="#Computer Science, #Data Structure, #Data Algorithms, #Networking, #Machine Learning"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:gravity="top"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>