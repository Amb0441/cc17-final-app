<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfileFragmentLearner">

    <TextView
        android:id="@+id/tvStudentProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scrollViewStudent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvStudentProfileTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="100dp"
            android:clipToPadding="false">

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStudentProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#4DD0C4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/studentBannerImage"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:contentDescription="Student Banner Image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/learner_banner"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivEditStudent"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:background="@drawable/circle_white_background"
                        android:padding="6dp"
                        android:layout_margin="8dp"
                        android:contentDescription="Edit Profile"
                        app:layout_constraintTop_toTopOf="@id/studentBannerImage"
                        app:layout_constraintEnd_toEndOf="@id/studentBannerImage"/>

                    <ImageView
                        android:id="@+id/ivStudentProfilePicture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/learner_pfp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_shape"
                        android:clipToOutline="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="80dp"
                        android:contentDescription="Student Profile Picture"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Info Container -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardStudentUserInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/ivStudentProfilePicture"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvStudentName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Noel Paloma"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tvYearLevel"/>

                            <TextView
                                android:id="@+id/tvStudentUsername"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="\@noel_paloma"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                app:layout_constraintTop_toBottomOf="@id/tvStudentName"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tvYearLevel"/>

                            <!-- Year Level -->
                            <TextView
                                android:id="@+id/tvYearLevel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="3rd Year\nComputer Science"
                                android:textSize="12sp"
                                android:textColor="#000000"
                                android:gravity="end"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tvStudentName"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Bio -->
                    <TextView
                        android:id="@+id/tvStudentBio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Passionate computer science student at Saint Louis University with interests in data science and machine learning."
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/cardStudentUserInfo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvStudentFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250 Followers"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvStudentBio"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:id="@+id/ivGitHub"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/github"
                        android:background="@drawable/circle_teal_background"
                        android:padding="4dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="GitHub Profile"
                        app:layout_constraintTop_toBottomOf="@id/tvStudentFollowers"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- My Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStudentMyInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#4DD0C4"
                android:layout_marginBottom="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:paddingBottom="120dp"
                    android:clipToPadding="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Info"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <!-- University -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2BA89E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="University"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvUniversity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saint Louis University"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Looking to Learn -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2BA89E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Looking to Learn"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvLookingToLearn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advanced Machine Learning, Deep Learning, Cloud Computing, Software Engineering"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Current Courses -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2BA89E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Courses"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvCurrentCourses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Structures, Database Systems, Web Development, Artificial Intelligence"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Interest Tags -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2BA89E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interest Tags"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvInterestTags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#AI, #MachineLearning, #Python, #DataScience, #WebDev"
                        android:textSize="12sp"
                        android:textColor="#000000"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>